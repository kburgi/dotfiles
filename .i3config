#Volume controls
#bindsym XF86AudioRaiseVolume "exec pactl set-sink-volume 0 +5% ; exec notify-send 'Volume up'" #increase sound volume
#bindsym XF86AudioLowerVolume "exec pactl set-sink-volume 0 -5% ; exec notify-send 'Volume down'"  #decrease sound volume
#bindsym XF86AudioMute "exec pactl set-sink-mute 0 toggle ; exec notify-send Mute/Unmute" # mute sound
bindsym $mod+F9 "exec pactl set-sink-volume 0 +5% ; exec notify-send 'Volume up'" #increase sound volume
bindsym $mod+F8 "exec pactl set-sink-volume 0 -5% ; exec notify-send 'Volume down'"  #decrease sound volume
bindsym $mod+F7 "exec pactl set-sink-mute 0 toggle ; exec notify-send Mute/Unmute" # mute sound

#Brightness controls
bindsym $mod+F4 "exec light -A 5 ; exec notify-send 'Brightness up'"
bindsym $mod+F3 "exec light -U 5 ; exec notify-send 'Brightness down'"

#Wallpaper
exec "feh --bg-scale /usr/share/wallpapers/arch_against_others.png"

#Touchpad
#bindsym $mod+Shift+F10 exec synclient TouchpadOff=1
#bindsym $mod+Shift+F11 exec synclient TouchpadOff=0
bindsym $mod+F10 "exec synclient TouchpadOff=$(synclient | awk '/TouchpadOff/ { off=int($3) } END { print !off }') ; exec notify-send 'Touchpad toggled'"

set $Locker i3lock -i /usr/share/wallpapers/arch_against_others_hd.png && sleep 1

#System lock, logout, sudpend, hibernate, reboot, shutdown
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff -i, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+q mode "$mode_system"


# Manual management of external displays
set $mode_display Ext Screen (v) VGA ON, (h) HDMI ON, (x) VGA OFF, (y) HDMI OFF
bindsym $mod+x mode "$mode_display"
mode "$mode_display" {

    bindsym h exec --no-startup-id xrandr --output HDMI-1-1 --auto --right-of eDP-1, mode "default" && feh --bg-scale /usr/share/wallpapers/arch_against_others.png
    bindsym y exec --no-startup-id xrandr --output HDMI-1-1 --auto --off, mode "default"
    bindsym x exec --no-startup-id xrandr --output eDP-1 --auto --off, mode "default"
    bindsym v exec --no-startup-id xrandr --output eDP-1 --auto --left-of HDMI-1-1, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}


#Moving workspaces between screens
bindsym Shift+$mod+bracketright move workspace to output right
bindsym Shift+$mod+bracketleft move workspace to output left

#Language
bindsym Ctrl+1 exec "setxkbmap us -option caps:escape ; exec notify-send 'Keymap US'"
bindsym Ctrl+2 exec "setxkbmap fr -option caps:escape ; exec notify-send 'Keymap FR'"
bindsym Ctrl+3 exec "setxkbmap gr -option caps:escape ; exec notify-send 'Keymap EL'"
bindsym Ctrl+4 exec "setxkbmap gb -option caps:escape ; exec notify-send 'Keymap UK'"

# screenshot whole screen
bindsym Print exec scrot ~/Pictures/Screenshots/`date +%d-%m-%Y_%H:%M:%S`.png
# screenshot window
bindsym $mod+Print exec scrot -u ~/Pictures/ScreenShoots/`date +%d-%m-%Y_%H:%M:%S`.png
# screenshot rectangle
bindsym $mod+Shift+Print exec scrot -s ~/Pictures/ScreenShoots/`date +%d-%m-%Y_%H:%M:%S`.png

#Toggle status bar
bindsym $mod+b bar mode toggle

#numlock
exec_always --no-startup-id numlockx on
#compton transparency
exec_always --no-startup-id compton -b

# two finger tap for right click and three for middle
exec_always --no-startup-id synclient TapButton2=3
exec_always --no-startup-id synclient TapButton3=2

